/* 页面整体样式 */
.address-page {
  padding: 20rpx;
  background-color: #fff;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 表单项样式 */
.form-item {
  display: flex;
  width: 100%;
  align-items: flex-start;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.label {
  padding: 20rpx;
  font-size: 34rpx;
  font-weight: normal;
  color: black;
  width: 20%;
}
.input {
  padding: 20rpx;
  width: 80%;
  font-size: 32rpx;
}
/* wxss */
.wrap-textarea {
  font-size: 32rpx;
  padding: 20rpx;
  width: 80%;
  white-space: pre-wrap; 
  height: auto;
  overflow-y: auto;
  min-height: 1.4rem;
  max-height: 3rem;
}

/* 开关项样式 */
.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0;
}
.switch-label {
  font-size: 32rpx;
  color: black;
  /* margin-right: 20rpx; */
}

/* 提交按钮样式 */
.submit{
  position: fixed;
  display: flex;
  justify-content: center;
  bottom: 10rpx;
  width: 100% ;
  height: 170rpx;
  border-top: 1rpx solid #eee;
  left: 50%;
  transform: translateX(-50%);
}
.submit-btn {
    /* display: flex; */
    background-color: #a62b2b; /* 暗红色 */
    width: 78% !important;
    height: 55%;
    margin-top: 30rpx;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    border-radius: 48rpx;
    padding: 20rpx;
}