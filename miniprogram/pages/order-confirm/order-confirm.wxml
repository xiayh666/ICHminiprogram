<view class="order-confirm-page">
    <!-- 收货信息 -->
    <view class="address-section">
        <view class="user-info">
            <text class="user-name">{{user.name}}</text>
            <text class="user-phone">{{user.phoneNumber}}</text>
        </view>
        <view class="address-detail" bindtap="editAddress">
            <text class="address-text">收货地址: {{address.detail}}</text>
            <text class="default-tag" wx:if="{{address.isDefault}}">默认</text>
        </view>
    </view>
    <!-- 分割线 -->
    <view class="divider">
        <view class="divider-pattern"></view>
    </view>
    <!-- 所购商品 -->
    <view class="goods-section">
        <view class="section-title">所购商品</view>
        <view class="goods-item" wx:for="{{goods}}">
            <image class="goods-img" src="{{item.image}}" mode="aspectFill"></image>
            <view class="goods-info">
                <view class="goods-name">{{item.name}}</view>
                <view class="goods-attr">{{item.selectedAttr}}</view>
                <view class="goods-price-count">
                    <text class="price">¥{{item.price}}</text>
                    <text class="count">×1</text>
                </view>
            </view>
        </view>
    </view>
    <!-- 优惠卡券 -->
    <!-- <view class="coupon-section" bindtap="chooseCoupon">
        <text class="section-title">优惠卡券</text>
        <view class="coupon-status">
            <text class="status-text">无可用</text>
            <image src="/images/icon-arrow.png" mode="widthFix"></image>
        </view>
    </view> -->
    <view class="amount-section">
        <view class="amount-item">
            <text>商品金额</text>
            <text class="amount-value">¥{{totalPrice}}</text>
        </view>
        <view class="amount-item">
            <text>运费</text>
            <text class="amount-value">¥{{shippingCost}}</text>
        </view>
        <view class="amount-item">
            <text>优惠券</text>
            <text class="amount-value">-¥{{discount}}</text>
        </view>
    </view>
    <view class="total-section">
        <view class="total-text">
            <text>合计:</text>
            <text class="total-price">¥{{totalPrice}}</text>
        </view>
        <view class="submit-btn" bindtap="submitOrder">提交订单</view>
    </view>
</view>