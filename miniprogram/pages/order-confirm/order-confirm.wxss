page {
    margin: 0;
    padding: 0;
    font-size: 30rpx;
}

/* 页面基础样式 */
.order-confirm-page {
    background-color: #f5f5f5;
    min-height: 100vh;
}

/* 收货信息 */
.address-section {
    background-color: #fff;
    padding: 24rpx;
    margin-bottom: 20rpx;
}
.right-arrow {
    position: absolute;
    right: 10rpx;
}

.user-info {
    display: flex;
    align-items: center;
    margin-bottom: 12rpx;
}

.user-name {
    font-size: 28rpx;
    color: #333;
    margin-right: 20rpx;
}

.user-phone {
    font-size: 26rpx;
    color: #666;
}

.address-detail {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #666;
}

.address-detail image:first-child {
    width: 28rpx;
    height: 28rpx;
    margin-right: 12rpx;
}

.address-text {
    flex: 1;
    margin-right: 12rpx;
    line-height: 1.5;
}

.default-tag {
    background-color: #a02c2c;
    color: #fff;
    font-size: 22rpx;
    padding: 2rpx 8rpx;
    border-radius: 4rpx;
    margin-right: 12rpx;
}

.address-detail image:last-child {
    width: 24rpx;
    height: 24rpx;
}

.divider {
    padding: 20rpx 0;
    background-color: #fff;
    overflow: hidden;
}

.divider-pattern {
    width: 100%;
    height: 8rpx;
    /* 色块的高度 */

    background-image: repeating-linear-gradient(to right,
            #ff4d4f,
            /* 红色块开始 */
            #ff4d4f 30rpx,
            /* 红色块结束 (宽度30rpx) */
            #1890ff 30rpx,
            /* 蓝色块开始 (紧接着红色块) */
            #1890ff 60rpx,
            /* 蓝色块结束 (宽度30rpx) */
            transparent 60rpx,
            /* 间隔开始 (使用透明) */
            transparent 80rpx
            /* 间隔结束 (宽度20rpx) */
        );

    /* 定义重复单元的大小 */
    background-size: 80rpx 8rpx;

    /* 倾斜整个图案，形成平行四边形效果 */
    transform: skewX(-20deg);
    transform-origin: top left;

    /* 稍微增加宽度并居中，确保完全覆盖父容器 */
    width: 110%;
    margin-left: -5%;
}

/* 所购商品 */
.goods-section {
    background-color: #fff;
    padding: 24rpx;
    margin-bottom: 20rpx;
}

.section-title {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 20rpx;
}

.goods-item {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}

.goods-img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 15rpx;
    margin-right: 20rpx;
}

.goods-info {
    flex: 1;
}

.goods-name {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 12rpx;
}

.goods-attr {
    font-size: 20rpx;
    color: #666;
    margin-bottom: 12rpx;
}

.goods-price-count {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.price {
    font-size: 28rpx;
    color: #a02c2c;
    font-weight: 500;
}

.count {
    font-size: 26rpx;
    color: #666;
}

/* 优惠卡券 */
.coupon-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    padding: 24rpx;
    margin-bottom: 20rpx;
}

.coupon-status {
    display: flex;
    align-items: center;
}

.status-text {
    font-size: 26rpx;
    color: #999;
    margin-right: 8rpx;
}

.coupon-status image {
    width: 24rpx;
    height: 24rpx;
}

/* 金额明细 */
.amount-section {
    background-color: #fff;
    padding: 24rpx;
    margin-bottom: 20rpx;
}

.amount-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
    color: #666;
    margin-bottom: 16rpx;
}

.amount-item:last-child {
    margin-bottom: 0;
}

.amount-value {
    color: #a02c2c;
}

/* 合计与提交 */
.total-section {
    width: 100vw;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    border-top: 1px solid #eee;
}

.total-text {
    font-size: 28rpx;
    color: #333;
}

.total-price {
    font-size: 32rpx;
    color: #a02c2c;
    font-weight: 500;
    margin-left: 8rpx;
}

.submit-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 200rpx;
    height: 100%;
    background-color: #a02c2c;
    color: #fff;
    font-size: 28rpx;
}