/* 地址列表 */
.address-list {
  padding-bottom: 20px;
}
.address-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16px;
  border-bottom: 1px solid #f5f5f5;
}
.address-info {
  flex: 1;
}
.address-name-phone {
  display: flex;
  width: 78%;
  align-items: center;
  margin-bottom: 8px;
  color: black;
}
.name {
  font-size: 16px;
  font-weight: bold;
  color: black;
  margin-right: 8px;
}
.phone {
  font-size: 14px;
  font-weight: bold;
  color: black;
  margin-right: 8px;
}
.default-tag {
  font-size: 10px;
  font-weight: lighter;
  color: #fff;
  background-color: #c8102e;
  padding: 2px 6px;
  border-radius: 4px;
}
.address-detail {
  width: 80%;
  font-size: 11px;
  color: #666;
  line-height: 1.5;
}
.address-edit {
  position: absolute;
  right: 10rpx;
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.iconfont{
  width: 44rpx;
  height: 44rpx;

}

/* 新建地址按钮 */
.add-address{
  position: fixed;
  display: flex;
  /* align-items: center; */

  justify-content: center;
  bottom: 10rpx;
  width: 100% ;
  height: 170rpx;
  border-top: 1rpx solid #eee;
  left: 50%;
  transform: translateX(-50%);
}
.add-address-btn {
    /* display: flex; */
    background-color: #a62b2b; /* 暗红色 */
    width: 78% !important;
    height: 55%;
    margin-top: 30rpx;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    border-radius: 48rpx;
    padding: 20rpx;
  }