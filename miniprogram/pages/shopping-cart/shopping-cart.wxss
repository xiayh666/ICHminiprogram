/* pages/shopping-cart/shopping-cart.wxss */
page {
    margin: 0;
    padding: 0;
    background-color: #F8F4E9;
    width: 100%;
    height: 100%;
}
.text {
    display: inline;
}
.shopping-cart-list {

}

.functional-bar {
    display: flex;    
    justify-content: space-between;
}
.good {
    background-color: white;    
    border-radius: 30rpx;
    padding: 20rpx;
    margin: 25rpx;
}
.good-right {
    position: relative;
}

.good-details {
    position:absolute;
    display: inline-block;
    margin-left: 15rpx;
    height: 100%;
}
.good-image {
    display: inline-block;
    width: 20vw;
    height: 20vw;
    border: 1px solid red;
    border-radius: 15rpx;
    overflow: hidden;
    /* 先用border 标明位置，以后改成图标 */

}

.good-details {
    display: inline-block;
    height: 100%;
}
.good-name {
    font-size: 4vw;
    font-weight: bold;
}

.good-attr {
    color: rgba(0, 0, 0, .5);
    font-size: small;
}

.good-price {
    color: #a02c2c;
    font-weight: bold;
    position: absolute;
    bottom: 0;
}

.bottem-of-page {
    height: 80rpx;

}
.left {
    margin-left: 50rpx;
    display: inline-block;
}

.right {
    display: flex;
}

.bottom-bar {
    line-height: 80rpx;
    position: fixed;
    display: flex;
    justify-content: space-between;

    bottom: 0;
    width: 100vw;
    border-top: 1px solid rgba(0, 0, 0, .2);
    background-color: white;
}
.bottom-bar > .left {
    margin: 10rpx;
    margin-left: 20rpx;
}
.bottom-bar > .right {

    margin: 10rpx;
    margin-right: 20rpx;
}

.total {
}
.total > .text{
    color: #a02c2c;
    font-size: x-large;
    font-weight: bold;
    margin-right: 20rpx;
}

.checkout {
    background-color: #a02c2c;
    border-radius: 60rpx ;
    width: 150rpx;
    color: white;
    height: 80rpx;
    text-align: center;
    font-size: 26rpx;
}


