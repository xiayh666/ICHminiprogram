page {
    margin: 0;
    padding: 0;
    font-size: 30rpx;
    background-color: #f8f5f2;
}

.search-result-page {
    background-color: #f8f5f2;
    min-height: 100vh;
}

.page-header {
    padding: 20rpx 24rpx;
    border-bottom: 1rpx solid #eee;
}

.header-title {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
    display: block;
}

.header-count {
    font-size: 24rpx;
    color: #999;
    margin-top: 8rpx;
    display: block;
}

.goods-scroll-view {
    height: calc(100vh - 100rpx);
    width: 100%;
}

.loading,
.no-result {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
}


.no-result-icon {
    width: 160rpx;
    height: 160rpx;
    margin-bottom: 30rpx;
}

.no-result-text {
    font-size: 28rpx;
    color: #999;
    margin-bottom: 40rpx;
}

.goods-container {
    padding: 20rpx 12rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.goods-item {
    width: 350rpx;
    background-color: #fff;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease;
}

.goods-item:active {
    transform: scale(0.98);
}

/* 商品图片 */
.goods-image {
    width: 100%;
    height: 350rpx;
    position: relative;
}

.goods-image image {
    width: 100%;
    height: 100%;
}

/* 商品信息 */
.goods-info {
    padding: 16rpx;
}

.goods-name {
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
    line-height: 1.4;
    display: flex;
    line-clamp: 2;
    overflow: hidden;
    margin-bottom: 8rpx;
}

.goods-desc {
    font-size: 22rpx;
    color: #999;
    line-height: 1.3;
    display: flex;
    /* line-clamp: 1; */
    overflow: hidden;
    margin-bottom: 12rpx;
}

.goods-price {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    font-size: 30rpx;
    color: #a02c2c;
    font-weight: 500;
}