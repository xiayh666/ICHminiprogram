<!-- pages/search-result/search-result.wxml -->
<view class="search-result-page">
    <!-- 页面标题栏 -->
    <view class="page-header">
        <text class="header-title">搜索结果</text>
        <text class="header-count">找到 {{goodsList.length}} 个商品</text>
    </view>
    <!-- 商品列表容器 -->
    <scroll-view scroll-y class="goods-scroll-view">
        <!-- 无结果提示 -->
        <view class="no-result" wx:if="{{!isLoading && goodsList.length === 0}}">
            <icon type="warn" size="100rpx" color="gray"></icon>
            <text class="no-result-text">没有找到与 "{{searchValue}}" 相关的商品</text>
        </view>
        <!-- 商品列表 -->
        <view class="goods-container" wx:if="{{goodsList.length > 0}}">
            <view class="goods-item" wx:for="{{goodsList}}" wx:key="_id" bindtap="goToDetail" data-id="{{item._id}}">
                <!-- 商品图片 -->
                <view class="goods-image">
                    <image src="{{item.image}}" mode="aspectFill"></image>
                </view>
                <!-- 商品信息 -->
                <view class="goods-info">
                    <text class="goods-name">{{item.name}}</text>
                    <text class="goods-desc">{{item.desc}}</text>
                    <view class="goods-price">¥{{item.price}}</view>
                </view>
            </view>
        </view>
    </scroll-view>
</view>