<!-- 等待发货页面 -->
<view class="page-information">
<view class="nav-container">
<view class="nav-bar">
  <view class="nav-title">
    <image src="{{finish}}" />
    <text>完成</text>
  </view>
  <image src="{{share}}" class="share-btn" />
  <view class="order-header">
    <view class="state-detail">
      <text>订单已完成，感谢您的购买</text>
    </view>
</view>
</view>
</view>

<view class="goods-card">
  <view class="shop-name">{{orderData.shopName}}</view>
  <view class="goods-item">
    <image src="{{orderData.goods.image}}"  class="goods-img" />
    <view class="goods-info">
      <view class="goods-name">{{orderData.goods.name}}</view>
      <view class="goods-price-count">
        <view class="goods-price">¥{{orderData.goods.price}}</view>
        <view class="goods-count">x{{orderData.goods.count}}</view>
      </view>
    </view>
  </view>
</view>

<view class="order-info-card">
  <view class="info-item">
    <view class="info-label">订单编号</view>
    <view class="info-value">{{orderData.orderNo}}</view>
  </view>
  <view class="info-item">
    <view class="info-label">下单时间</view>
    <view class="info-value">{{orderData.orderTime}}</view>
  </view>
  <view class="info-item">
    <view class="info-label">支付方式</view>
    <view class="info-value">{{orderData.payMethod}}</view>
  </view>
  <view class="info-item">
    <view class="info-label">支付状态</view>
    <view class="info-value">{{orderData.payStatus}}</view>
  </view>
</view>

<view class="pay-info">
<view class="pay-info-title">
<text>支付金额</text>
<text class="price">¥{{orderData.goods.price}}</text>
</view>
<view class="pay-info-detail">
<text class="price">实付款：</text>
<text class="real-price">¥{{orderData.realPrice}}</text>
</view>
</view>
</view>

<view class="action-bar">
  <button class="cancel-btn" bindtap="cancelOrder">删除订单</button>
  <button class="pay-btn" >再次购买</button>
</view>