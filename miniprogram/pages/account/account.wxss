page{
  background-color: #eee;
}

.section {
  width: 95%;
  padding-top: 10rpx;
  padding-left:20rpx ;
  padding-right: 20rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
}

.section-title {
  padding-top: 25rpx;
  font-size: 28rpx;
  color: #999;
}

/* 基础信息项样式 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-label {
  font-size: 32rpx;
  color: #333;
}

.info-value {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: black;
  text-align: right;
}

.info-gray {
  color: #999;
}

.avatar {
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  background-color: aqua;
}

.arrow {
  font-size: 40rpx;
  color: #999;
}

/* 地址项样式 */
.address-item {
  display: flex;
  padding: 20rpx 0;
  height: 90rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  /* margin-bottom: 20rpx; */
}
.address-info {
  flex: 1;
}
.address-name-phone {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-weight: bold;
  color: black;
}
.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 8rpx;
}
.phone {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 8rpx;
}
.default-tag {
  font-size: 24rpx;
  font-weight: lighter;
  color: #fff;
  background-color: #c8102e;
  padding: 2px 6px;
  border-radius: 4px;
}
.address-detail {
  font-size: 12px;
  color: #666;
  line-height: 1.5;
}
.address-edit {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.iconfont{
  width: 44rpx;
  height: 44rpx;

}
