<!-- 线上线下预约通道 -->
<view class="reservation">
    <view class="section-header">
        <text>{{more.courses.title}}</text>
        <image src="{{more.image}}" class="more" mode="widthFix" />
    </view>
    <view class="suggestion-course" wx:for="{{suggestions.courses}}">
        <view class="avatar">
            <image class="" src="{{item.avatar}}" />
        </view>
        <view class="details">
            <view class="course-name">{{item.craftman}} {{item.name}}</view>
            <view class="course-desc">{{item.desc}}</view>
            <view class="course-tag">{{item.tag}}</view>
            <view class="learn-more">了解更多></view>
        </view>
    </view>
</view>
