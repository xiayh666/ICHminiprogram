<!-- 首页地图 -->
<view class="map fade-in-item">
    重庆非遗工坊地图
    <image class="img" src="{{map.image}}" />
</view>
<!-- 推荐内容(商品) -->
<view class="suggestion-goods">
    <view class="section-header fade-in-item">
        <text>{{more.goods.title}}</text>
        <image src="{{more.image}}" class="more" mode="widthFix" bind:tap="gotoGoodsPage" data-destination="{{more.goods.destination}}" />
    </view>
    <view class="goods">
        <navigator class="suggestion-card fade-in-item {{animation}}" wx:for="{{suggestions.goods.items}}" url="/pages/goods-detail/goods-detail?id={{item._id}}">
            <image class="card-image" src="{{item.image}}" bindload="onImageLoad" />
            <view class="details">
                <view class="card-name">{{item.name}}</view>
                <view class="card-desc">{{item.desc}}</view>
                <view class="card-price">￥{{item.price}}</view>
            </view>
        </navigator>
        <view class="card-desc"></view>
    </view>
</view>
