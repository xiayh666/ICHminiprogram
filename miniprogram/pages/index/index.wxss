page {
    margin: 0;
    padding: 0;
    background-color: #F8F4E9;
    width: 100%;
    height: 100%;
    font-size: 20rpx;
}

/* 搜索输入框区域 */
.search {
    padding: 20rpx 24rpx;
}

.search-input-wrap {
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius: 60rpx;
    padding: 16rpx 24rpx;
}

.search-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
}

.search-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    height: 40rpx;
    line-height: 40rpx;
}

.placeholder-style {
    color: #999;
}

.fade-in-item {
    opacity: 0;
    transform: translateY(-20rpx);
    animation: fadeInUp 0.6s ease-out forwards;
}

@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.index-impression {
    position: relative;
    width: 100%;

}

.logo {
    scale: 0.3;
    width: 100%;
    height: 500rpx;
    position: absolute;
    top: 0;
    left: 0;
    /* object-fit: contain; */
}

.slogan {
    width: 100%;
    height: 500rpx;
}

.mascot {
    position: absolute;
    justify-content: space-around;
    display: flex;
    top: 0;
    right: 0;
}

.mascot-say {
    color: #333;
    text-align: right;
    font-size: 20rpx;
    flex: 7;
}

.mascot-text {
    padding: 15rpx;
    background-color: white;
    border-radius: 15rpx;
    border-bottom-right-radius: 0;
}

.mascot-img {
    flex: 3;
    max-height: 200rpx;
}

.map {
    position: relative;
    height: 600rpx;
    text-align: left;
    font-size: 30rpx;
    padding-top: 30rpx;
    font-weight: 600;
    color: #505050;

}
.locate {
    /* scale: 0.2; */
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    left: 50%;
    top: 60%;

}

.map>.img {
    width: 100%;
    height: 100%;
    object-fit: fill;
}

.swiper {
    border-radius: 15rpx;
    border: 1rpx solid rgb(255, 255, 255);
    height: 30vh;
    margin: 3vw;
    overflow: hidden;
    /* box-shadow: 5rpx 3rpx 10rpx 5rpx rgba(150, 150, 150, .5); */
}

.swiper-wrapper {
    width: 100%;
    height: 100%;

}


.swiper-image {
    display: inline-block;
    width: 100%;
    height: 100%;
}

.search {
    display: flex;
    height: 50rpx;
    background-color: rgba(250, 250, 250, .8);
    margin-top: 10rpx;
    margin-left: 5vw;
    margin-right: 5vw;
    /* box-shadow: 5rpx 3rpx 10rpx 2rpx rgba(150, 150, 150, .3); */
    border: 1rpx solid rgb(255, 255, 255);
    border-radius: 5vh;
    align-items: center;
}

.search-left {
    display: flex;
    width: 30rpx;
    height: 30rpx;
    /* height: 4vh;
    width: 30rpx; */

}

.search-left>.img {
    height: 100%;

}


.search-right {
    /* display: inline-block; */
    /* line-height: 5vh; */
    font-size: 20rpx;
    color: rgba(0, 0, 0, .4);
    height: 100%;
}


.section-header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
    margin-top: 30rpx;
}

.section-header text {
    font-size: 40rpx;
    margin-left: 10rpx;
    /* font-weight: bold; */
}

.section-header .more {
    margin-right: 10rpx;
    margin-left: auto;
    width: 90rpx;
    /* height: 60rpx; */
}

.more-bar {
    display: flex;
    justify-content: space-between;
    margin-top: 50rpx;
    margin-right: 50rpx;
    /* margin-left: 20rpx; */
}


.more-bar>.left {
    display: inline-block;
    font-size: larger;
}

.more-bar>.right {
    display: inline-block;
    font-size: 2vh;
    text-align: right;
    color: rgba(0, 0, 0, .6);
}

.menu {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    /* justify-content:  center; */
    justify-content: space-evenly;
}

.icon {
    /* display: block; */
    /* margin: 0 auto; */
    object-fit: cover;
    max-width: 100%;
    width: 17vw;
    height: 17vw;
}

.menu-item {
    text-align: center;
    width: 25vw;
    font-size: 3vw;
    text-shadow: 2rpx 7rpx 5rpx rgba(0, 50, 50, .2);

}

.suggestion-goods {
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.goods {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;

}

.card-image {
    width: 100%;
    height: 180rpx;
}

.suggestion-card>.details {
    height: 120rpx;
    background-color: white;
}

.suggestion-card {
    /* border: 5rpx solid black; */
    display: flex;
    flex-direction: column;
    margin: 10rpx;
    width: 45vw;
    height: 300rpx;
    overflow: hidden;
    border-radius: 20rpx;
}

.card-name {
    font-weight: 550;
    color: #505050;
    font-size: 25rpx;
    margin-left: 10rpx;
    margin-top: 10rpx;
}

.card-desc {
    margin-left: 12rpx;
    margin-bottom: 12rpx;
    color: rgb(117, 117, 117);
}

.card-price {
    color: #a02c2c;
    font-size: 25rpx;
    margin-left: 10rpx;

}

.suggestion-course {
    display: flex;
    overflow-x: scroll;
    margin-left: 20rpx;
}
.suggestion-course > .avatar {

}
.suggestion-course > .details {
    flex: 1;
}

.reservation {
    margin-left: 10rpx;
    margin-right: 10rpx;

}


.suggestion-course {
    display: flex;
    margin-top: 20rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    background-color: white;
    padding: 5rpx;
    border-radius: 15rpx;

}

.suggestion-course>.avatar {
    width: 20vw;
    height: 20vw;
    /* border: 2px solid red; */
    /* border-radius: 15rpx; */
    margin: 10px;
}

.suggestion-course>.avatar>image {
    width: 100%;
    height: 100%;
    /* border-radius: 15rpx; */
}

.suggestion-course>.details {
    margin-left: 10rpx;
    position: relative;
}

.suggestion-course>.details>.course-name {
    font-size: 30rpx;
    font-weight: 600;
    color: #505050;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.suggestion-course>.details>.course-desc {
    color: #b2b2b2;
}

.suggestion-course>.details>.learn-more {
    color: #a02c2c;
    font-size: 25rpx;
    position: absolute;
    bottom: 30rpx;
}

.suggestion-course>.details>.course-tag {
    color: #a02c2c;
    background-color: #F8F4E9;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    padding: 10rpx;
    border-radius: 10rpx;
}


.bottom {
    height: 60rpx;
}