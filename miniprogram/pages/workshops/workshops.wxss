page {
    margin: 0;
    padding: 0;
    background-color: #F8F4E9;
    width: 100%;
    height: 100%;
    font-size: 30rpx;
}

.workshops-list {
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    gap: 30rpx;
}

.workshop-item {
    margin: 40rpx;
    background-color: white;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    padding: 24rpx;
}

.workshop-img {
    width: 200rpx;
    height: 140rpx;
    border-radius: 8rpx;
    object-fit: cover;
}

.workshop-name {
    margin-left: 30rpx;
    font-size: 32rpx;
    color: #333333;
    flex: 1;
}