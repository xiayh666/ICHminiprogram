page {
    margin: 0;
    padding: 0;
    font-size: 30rpx;
    background-color: #f8f5f2;
}

.goods-scroll-view {
    height: 600rpx;
    width: 100%;
}

.loading,
.no-result {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
}


.no-result-icon {
    width: 160rpx;
    height: 160rpx;
    margin-bottom: 30rpx;
}

.no-result-text {
    font-size: 28rpx;
    color: #999;
    margin-bottom: 40rpx;
}

.goods-container {
    padding: 20rpx 12rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.goods-item {
    width: 350rpx;
    background-color: #fff;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease;
}

.goods-item:active {
    transform: scale(0.98);
}

/* 商品图片 */
.goods-image {
    width: 100%;
    height: 350rpx;
    position: relative;
}

.goods-image image {
    width: 100%;
    height: 100%;
}

.goods-info {
    padding: 16rpx;
}

.goods-name {
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
    line-height: 1.4;
    display: flex;
    line-clamp: 2;
    overflow: hidden;
    margin-bottom: 8rpx;
}

.goods-desc {
    font-size: 22rpx;
    color: #999;
    line-height: 1.3;
    display: flex;
    /* line-clamp: 1; */
    overflow: hidden;
    margin-bottom: 12rpx;
}

.goods-price {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    font-size: 30rpx;
    color: #a02c2c;
    font-weight: 500;
}

.workshop-card {
    display: flex;
    background-color: white;
    margin: 20rpx;
    border-radius: 15rpx;
    padding: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.workshop-image {
    flex: 1;
    width: 100%;
    height: 300rpx;
    border-radius: 10rpx;
}

.workshop-info {
    flex: 2;
    margin-left: 20rpx;
    padding-top: 20rpx;
}

.workshop-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 10rpx;
}

.rating {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}

.stars {
    color: #a02c2c;
    font-size: 26rpx;
    margin-right: 10rpx;
}

.score {
    font-size: 26rpx;
    color: #333;
    margin-right: 10rpx;
}

.review-count {
    font-size: 24rpx;
    color: #999;
}

.location {
    font-size: 26rpx;
    color: #666;
    display: block;
    margin-bottom: 15rpx;
}

.reviews {
    margin-bottom: 20rpx;
}

.review-text {
    font-size: 24rpx;
    color: #666;
    display: block;
    margin-bottom: 8rpx;
    line-height: 1.4;
}
.btn-container {
    position: relative;
    width: 100%;
}
.reserve-btn {
    position: absolute;
    text-align: center;
    right: 0;
    width: 200rpx;
    background-color: #b32a25;
    color: white;
    font-size: 28rpx;
    padding: 15rpx 0;
    border-radius: 5rpx;
    width: 300rpx;
}

.page-title {
    font-size: 40rpx;
    font-weight: bolder;
    color: #333;
    padding: 0rpx 0rpx 15rpx;
}

/* 区域标题样式 */
.section-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
    padding: 25rpx 30rpx 15rpx;
}

/* 课程区域样式 */
.course-card {
    background-color: white;
    margin: 20rpx;
    border-radius: 15rpx;
    padding: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    position: relative;
}

.course-img {
    width: 100%;
    height: 300rpx;
    border-radius: 10rpx;
    object-fit: cover;
}

.course-info {
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    right: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.course-name {
    font-size: 30rpx;
    font-weight: bold;
    color: white;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

.experience-btn {
    background-color: #b32a25;
    color: white;
    font-size: 26rpx;
    padding: 12rpx 25rpx;
    border-radius: 5rpx;
}