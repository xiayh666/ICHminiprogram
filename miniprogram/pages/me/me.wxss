/* 全局样式 */
page {
  margin: 0;
  padding: 0;
  border: none;
  background-color: #F8F5F0;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

/* 自定义导航栏 */
.custom-nav {
  background-color: #C52E2A;
  padding: 50rpx 50rpx 100rpx;
  position: relative;
}
.user-info { 
  display: flex;  
  position: relative;
}
.avatar { 
  width: 120rpx; 
  height: 120rpx; 
  border-radius: 50%; 
  border: 4rpx solid rgba(255,255,255,0.3);
  background-color: #666;
 }
.user-tag { 
  background: #E04E4B; 
  color: #fff; 
  font-size: 24rpx; 
  height: 30rpx;
  padding: 6rpx 16rpx; 
  border-radius: 20rpx; 
  position: absolute;
  bottom: 10%;
  left: 20%;
}
.function{
  color: #fff;
  padding-left: 50rpx;
  width: 75%;
  height: 20rpx;
  align-items: center;
  font-size:26rpx;
  display: flex;
  justify-content: space-between;
  position:absolute;
  bottom: 10%;
}

/* 订单状态栏 */
.order-status {
  position: relative;
  display: flex;
  height: 240rpx;
  flex-direction: column;
  flex-wrap: wrap;
  background: #fff;
  /* padding: 30rpx 0; */
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.title{
  display: flex;
  justify-content: space-around;
  height: 80rpx;
  width: 100%;
  /* background-color: #999; */
  border-bottom:solid 1rpx rgb(187, 182, 182);
  line-height: 80rpx;
}
.title text{
  font-size: 24rpx; 
  color: #666; 
  padding-left: 80%;
}
.good_information{
  height: 120rpx;
  width: 100%;
  padding-top: 20rpx;
  /* padding: 20rpx; */
  /* background-color: #C52E2A; */
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.status-item { 
  display: flex;  
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
}
.status-icon { width: 60rpx; height: 60rpx; margin-bottom: 10rpx; }
.status-item text { 
  font-size: 24rpx; 
  color: #666; }

/* 功能入口 */
.function-list {
  height: 250rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
  align-items:flex-start;
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  padding-top: 30rpx ;
  padding-bottom: 10rpx;
}
.function-item { 
  width: 25%; 
  height: 125rpx;
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  /* margin-bottom: 20rpx;  */
}
.function-icon { 
  width: 60rpx; 
  height: 60rpx; 
  margin-bottom: 10rpx; }
.function-item text { 
  font-size: 28rpx; 
  color: #333; }

/* 推荐区域通用样式 */
.recommend-section, .more-section,.more-section-bottom {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  padding: 30rpx;
}
.section-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30rpx; }
.section-header text { font-size: 32rpx; font-weight: bold; color: #333; }
.view-more { font-size: 24rpx; color: #999; }

/* 非遗商品推荐-横向滚动 */
.goods-scroll { white-space: nowrap; }
.goods-item { display: inline-block; width: 240rpx; margin-right: 20rpx; vertical-align: top; }
.goods-image { width: 240rpx; height: 240rpx; border-radius: 8rpx; }
.goods-name { display: block; width: 240rpx; font-size: 24rpx; color: #333; margin-top: 10rpx; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }

/* 优惠券区 */
.coupon-section { 
  background: #fff; 
  margin: 20rpx; 
  border-radius: 12rpx; 
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05); 
  padding: 30rpx; }
.coupon-item { 
  display: flex; 
  background: #C52E2A; 
  color: #fff;
  border-radius: 10rpx; 
  height: 200rpx;
  /* padding: 30rpx;  */
  margin-bottom: 20rpx; }
.coupon-space{
  width: 25%;
  border-right: dashed 1rpx #fff;
}
.coupon-left { 
  flex: 1; 
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left:10rpx;
}
.coupon-desc { 
  font-size: 32rpx; 
  display: block; 
  margin-bottom: 18rpx; }
.coupon-type { 
  font-size: 32rpx; 
  opacity: 0.8; 
  margin-bottom: 18rpx;}
.coupon-right { 
  display: flex;
  padding-right: 10rpx;
  padding-bottom: 20rpx; 
  justify-content: flex-end;
  flex-direction: column;
}
.coupon-btn { 
  background: #fff; 
  color: #C52E2A; 
  font-size: 28rpx;
  padding: 10rpx 25rpx; 
  border-radius: 25rpx; 
  font-weight: bold; }

/* 更多推荐-网格布局 */
.goods-grid { 
  padding-top: 20rpx;
  display: flex; 
  flex-wrap: wrap; 
  justify-content: space-between; 
}
.goods-grid .goods-item { width: 31%; margin-right: 0; margin-bottom: 20rpx; }
.goods-grid .goods-image { width: 100%; height: 200rpx; }

/* 学习资源 */
.study-grid{
  padding-top: 20rpx;
  position: relative;
  height: 200rpx;
}
.study-grid-left{
  position: absolute;
  left: 10rpx;
  display: flex;
  align-items: center;
}
.study-grid .study-grid-left image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 14rpx;
  background-color: aqua;
}
.study-grid .study-grid-left text{
  padding-left: 10rpx;
  font-size: 32rpx;
  color: #999;
  /* background-color: #E04E4B; */
}
.study-grid .study-btn{
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  background: #C52E2A; 
  color: #fff; 
  font-size: 28rpx;
  padding: 10rpx 25rpx; 
  border-radius: 25rpx; 
  font-weight: bold;
}