<!-- 非遗商品推荐 -->
<view class="recommend-section">
  <view class="section-header">
    <text>非遗商品推荐</text>
    <navigator url="/pages/me_good_more/index" class="view-more">查看更多 ></navigator>
  </view>
  <scroll-view scroll-x class="goods-scroll">
    <view class="goods-item" wx:for="{{goodsList}}" wx:key="id">
      <image src="{{item.image}}" class="goods-image" />
      <text class="goods-name">{{item.name}}</text>
    </view>
  </scroll-view>
</view>

<!-- 优惠券区 -->
<view class="coupon-section">
  <view class="coupon-item" wx:for="{{couponList}}" wx:key="id">
    <view class="coupon-space"></view>
    <view class="coupon-left">
      <text class="coupon-desc">{{item.desc}}</text>
      <text class="coupon-type">{{item.type}}</text>
    </view>
    <view class="coupon-right">
      <text class="coupon-btn">立即使用</text>
    </view>
  </view>
</view>

<!-- 更多推荐 -->
<view class="more-section">
  <view class="section-header">
    <text></text>
    <navigator url="/pages/me_good_more/index" class="view-more">更多 ></navigator>
  </view>
  <view class="goods-grid">
    <view class="goods-item" wx:for="{{moreGoodsList}}" wx:key="id">
      <image src="{{item.image}}" class="goods-image" />
      <text class="goods-name">{{item.name}}</text>
    </view>
  </view>
</view>

<!-- 更多资源 -->
<view class="more-section-bottom">
  <view class="section-header">
    <text></text>
    <navigator url="/pages/study_more/index" class="view-more">更多 -></navigator>
  </view>
  <view class="study-grid">
  <view class="study-grid-left">
    <image src="{{studyInfo.image}}"/>
    <text>{{studyInfo.memo}}</text>
  </view>
  <text class="study-btn">立即查看</text>
  </view>
</view>