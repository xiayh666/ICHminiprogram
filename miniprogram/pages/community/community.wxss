/* pages/community/community.wxss */
/* 全局样式重置 & 基础配置 */
page {
  background-color: #F8F4E9;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 30rpx;
}
/* 搜索栏 */
.search-bar {
  width: 90%;
  height: 30rpx;
  margin: 15rpx auto;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding:20rpx 20rpx;
}
.search-input {
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

/* 标签栏 */
.tab-bar {
  padding: 16rpx 0;
  background-color: #F8F4E9;
  /* border-bottom: 1rpx solid #eee; */
}
.tab-scroll {
  white-space: nowrap; /* 禁止换行 */
  padding: 0 20rpx;
}
.tab-item {
  display: inline-block; /* 横向排列 */
  padding: 18rpx 30rpx;
  margin-right: 10rpx;
  font-size: 30rpx;
  color: rgb(214, 42, 42); /* 未选中文字色 */
  background-color:rgb(236, 206, 206) ;
  border-radius: 40rpx;
  transition: all 0.3s;
}
.tab-item.active {
  color: #fff; /* 选中文字色 */
  background-color: #c92a2a; /* 选中背景色 */
  font-weight: 500;
}

/* 话题列表 */
.topic-section,.craftsman-section {
  padding: 30rpx;
  /* padding-bottom: 30rpx; */
  background-color: #f8f5f2;
}
.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.section-header text {
  font-size: 40rpx;
  font-weight: bold;
}
.section-header .more {
  margin-left: auto;
  width: 90rpx;
  /* height: 60rpx; */
}
.topic-list {
  padding: 0 30rpx;
}
.topic-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}
.topic-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.topic-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.topic-info {
  flex: 1;
  margin-left: 16rpx;
}
.topic-author {
  font-size: 28rpx;
  font-weight: bold;
}
.topic-tag {
  font-size: 24rpx;
  color: #c92a2a;
  background-color: rgba(201, 42, 42, 0.1);
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  display: inline-block;
  margin-top: 4rpx;
}
.topic-tag-null{
  display: none;
}
.topic-time {
  font-size: 24rpx;
  color: #999;
}
.topic-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.topic-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 25rpx;
  line-height: 1.5;
}
.topic-images {
  width: 98%;
  margin: 0 auto;
  gap: 8rpx;
  overflow: hidden;
  border-bottom: solid 1rpx #999;
  height: 340rpx;
  padding-bottom: 10rpx;
  /* background-color: aqua; */
}

/* 1张图：全屏宽度，自适应高度 */
.img-single {
  width: 100%;
  height: 98%;
}
.img-single image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

/* 网格布局基础样式 */
.img-grid {
  display: flex;
  flex-wrap: wrap; /* 自动换行 */
  gap: 8rpx; /* 图片间距 */
}
.img-grid image {
  border-radius: 20rpx;
  object-fit: cover; /* 裁剪填充，避免变形 */
}

/* 2列布局（2张/4张） */
.img-grid-2 image {
  width: calc(50% - 4rpx); /* 减去一半的间距 */
  height: 240rpx; /* 固定高度，或用aspect-ratio */
}

/* 3列布局（3张/≥5张） */
/* 3张图容器：左右分栏 */
.img-3-container {
  display: flex;
  width: 100%;
  gap: 8rpx; /* 左右两栏间距 */
  box-sizing: border-box;
  height: 100%;
}

/* 左侧容器：占2/3宽度，内部上下排列 */
.img-3-left {
  width: 54%; /* 左侧宽度略大于右侧，视觉更平衡 */
}

/* 右侧容器：占1/3宽度，高度与左侧总高度一致 */
.img-3-right {
  width: 46%;
  display: flex;
  flex-direction: column; /* 上下排列 */
  gap: 8rpx; /* 左侧两张图间距 */
  height: 100%;
}

/* 左侧两张图：各占左侧容器高度的50%（总高度=右侧单张高度） */
.img-3-left .img-3-item {
  width: 100%;
  height: 100%; /* 占满右侧容器高度 */
  object-fit: cover;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

/* 右侧单张图：高度=左侧容器总高度（即与左侧两张图总高度相等） */
.img-3-right .img-3-item-1 {
  width: 100%;
  height: 50%; /* 此时父元素（.img-3-left）高度已明确（=父容器高度），50%生效 */
  object-fit: cover;
  border-top-right-radius: 20rpx;
}
.img-3-right .img-3-item-2 {
  width: 100%;
  height: 50%; /* 此时父元素（.img-3-left）高度已明确（=父容器高度），50%生效 */
  object-fit: cover;
  border-bottom-right-radius: 20rpx;
}

.topic-meta {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 28rpx;
}
.meta-item {
