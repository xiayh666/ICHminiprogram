/* pages/community/community.wxss */
/* 全局样式重置 & 基础配置 */
page {
  background-color: #F8F4E9;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Arial, sans-serif;
}
/* 搜索栏 */
.search-bar {
  width: 90%;
  height: 30rpx;
  margin: 15rpx auto;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding:20rpx 20rpx;
}
.search-input {
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

/* 标签栏 */
.tab-bar {
  padding: 16rpx 0;
  background-color: #F8F4E9;
  /* border-bottom: 1rpx solid #eee; */
}
.tab-scroll {
  white-space: nowrap; /* 禁止换行 */
  padding: 0 20rpx;
}
.tab-item {
  display: inline-block; /* 横向排列 */
  padding: 18rpx 30rpx;
  margin-right: 10rpx;
  font-size: 30rpx;
  color: rgb(214, 42, 42); /* 未选中文字色 */
  background-color:rgb(236, 206, 206) ;
  border-radius: 40rpx;
  transition: all 0.3s;
}
.tab-item.active {
  color: #fff; /* 选中文字色 */
  background-color: #c92a2a; /* 选中背景色 */
  font-weight: 500;
}

/* 话题列表 */
.topic-section,.craftsman-section {
  padding: 30rpx;
  background-color: #f8f5f2;
}
.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.section-header text {
  font-size: 40rpx;
  font-weight: bold;
}
.section-header .more {
  margin-left: auto;
  width: 90rpx;
  /* height: 60rpx; */
}
.topic-list {
  padding: 0 30rpx;
}
.topic-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}
.topic-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.topic-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.topic-info {
  flex: 1;
  margin-left: 16rpx;
}
.topic-author {
  font-size: 28rpx;
  font-weight: bold;
}
.topic-tag {
  font-size: 24rpx;
  color: #c92a2a;
  background-color: rgba(201, 42, 42, 0.1);
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  display: inline-block;
  margin-top: 4rpx;
}
.topic-time {
  font-size: 24rpx;
  color: #999;
}
.topic-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.topic-desc {
  font-size: 28rpx;
  color: #666;
  /* margin-bottom: 8rpx; */
  line-height: 1.5;
}
.topic-images {
  width: 98%;
  margin: 0 auto;
  gap: 8rpx;
  overflow: hidden;
  border-bottom: solid 1rpx #999;
}
/* 1张图样式 */
.one-img {
  display: flex;
  flex-direction: column;
  height: 400rpx;
}
.one-img image {
  width: 100%;
  height: 100%;
  /* object-fit: cover; */
}
/* 3张图样式 */
.three-imgs {
  display: grid !important; /* 强制覆盖任何冲突样式 */
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  height: 400rpx;
}
.img-1 {
  grid-area: 1 / 1 / 3 / 2;
  width: 100%;
  height: 100%;
}
.img-2, .img-3 {
  width: 100%;
  height: 100%;
}
/* 2/4张图样式 */
.few-imgs {
  display: flex;
  flex-wrap: wrap;
  height: 400rpx;
}
.few-imgs image {
  flex: 1;
  min-width: calc((100% - 8rpx) / 2);
  height: calc((100% - 8rpx) / 2);
  object-fit: cover;
}
.flex-img {
  border-radius: 8rpx;
}

.topic-meta {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 26rpx;
}
.meta-item {
  margin-right: 30rpx;
  display: flex;
  align-items: center;
}
.meta-item icon {
  margin-right: 4rpx;
}

