.topic-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.topic-icon {
  margin-right: 16rpx;
}
.topic-content {
  flex: 1;
}
