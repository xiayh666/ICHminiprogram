.star:first-child {
    margin-left: 0;
}

/* 课程列表 */
.course-list {
    margin-top: 20rpx;
    background-color: #fff;
}

.course-item {
    display: flex;
    align-items: center;
    padding: 24rpx;
    border-bottom: 1px solid #eee;
}

.course-item:last-child {
    border-bottom: none;
}

.toggle {
    width: 36rpx;
    height: 36rpx;
    border: 2rpx solid #a02c2c;
    border-radius: 50%;
    margin: 15rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.2s;
}

.toggle.selected {
    background-color: #a02c2c;
    border-color: #a02c2c;
}

/* 对勾 */
.toggle.selected::after {
    top: 4rpx;
    content: "";
    position: absolute;
    width: 12rpx;
    height: 22rpx;
    border: 2rpx solid white;
    border-top: none;
    border-left: none;
    transform: rotate(45deg);
}


