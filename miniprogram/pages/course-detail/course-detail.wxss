.course-content {
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.course-name {
    font-size: 28rpx;
    color: #333;
}

.course-price {
    font-size: 28rpx;
    color: #a02c2c;
    font-weight: 500;
}

.lock-icon {
    width: 36rpx;
    height: 36rpx;
    margin-left: 16rpx;
}

/* 购买按钮区域 */
.buy-section {
    /* padding: 24rpx; */
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #f5f5f5;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.buy {
    width: 100%;
    height: 100%;
    position: relative;
}
.buy-btn {
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    right: 0;
    width: 300rpx;
    height: 100%;
    line-height: 90rpx;
    background-color: #a02c2c;
    color: #fff;
    /* border-radius: 12rpx; */
    font-size: 32rpx;
    font-weight: 500;
}

.stars {
    height: 30rpx;
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23A02C2C"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>');
    background-repeat: repeat-x;
    background-size: 30rpx 30rpx;
}

.icon {
    width: 1em;
    height: 1em;
    vertical-align: middle;
    overflow: hidden;
}

/* 顶部导航栏 - 白色返回箭头 */
.icon-back-white {
    width: 36rpx;
    height: 36rpx;
    color: #fff;
    /* 通过 color 属性控制 SVG 颜色 */
}

/* 播放按钮 */
.play-btn .icon-play {
    width: 50rpx;
    height: 50rpx;
    color: #fff;
}

/* 星星图标 */
.icon-star {
    width: 32rpx;
    height: 32rpx;
    margin-left: 4rpx;
}

.icon-star:first-child {
    margin-left: 0;
}

.icon-star-fill {
    color: #ff4d4f;
    /* 红色星星 */
}

.icon-star-empty {
    color: #d9d9d9;
    /* 灰色星星 */
}

/* 单选框图标 */
.icon-radio {
    width: 30rpx;
    height: 30rpx;
}

.radio-box.selected .icon-radio {
    color: #ff4d4f;
    /* 选中时为红色 */
}

.radio-box .icon-radio {
    color: #8c8c8c;
    /* 未选中时为灰色 */
}

/* 锁定图标 */
.icon-lock {
    width: 36rpx;
    height: 36rpx;
    color: #8c8c8c;
    /* 灰色锁定 */
    margin-left: 16rpx;
}