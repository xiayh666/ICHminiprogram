/* pages/goods/goods.wxss */
/* 页面整体 */
page {
  background-color: #F8F4E9;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 商品列表 */
.goods-list {
  margin-top: 120rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx;
}

.goods-item {
  width: 48%;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 48rpx;
  position: relative;
  overflow: hidden;
}

.goods-img {
  width: 100%;
  height: 200rpx;
}

.goods-info {
  padding: 16rpx;
}

.goods-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-desc {
  font-size: 26rpx;
  color: #666;
  padding-bottom: 12rpx;
  /* margin-bottom: 5rpx; */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-price {
  font-size: 30rpx;
  color: #e4393c;
  font-weight: bolder;
}
.cart{
  position: absolute;
  width:45rpx ;
  height: 45rpx;
  bottom: 14rpx;
  right: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgb(236, 206, 206);
  border-radius: 50%;
}
.cart-icon {
  width: 35rpx;
  height: 35rpx;
}

/* 底部导航 */
.tab-bar {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-item image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}

.tab-item text {
  font-size: 20rpx;
  color: #666;
}

.tab-item.active text {
  color: #e4393c;
}